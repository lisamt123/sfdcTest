	<title>10K Advisors - About</title>
    <apex:composition template="X10KViewSiteTemplate">
        <apex:define name="header">
            <c:X10KViewHeader seletedTab="#about"/>
        </apex:define>
        <apex:define name="body">
			<div class="container-fluid">
				<div class="row text-left about" style="background-image : url('{!URLFOR($Resource.Resources, 'Resources/images/about_background.jpg')}')">
					<div class="col-md-8 col-md-offset-2">
						<button type="button" class="btn btn-lg nohover btn-default">About</button>
						<h1>A community of Salesforce experts from around the world</h1>
					</div>
				</div>
				<div class="row text-left about-text" style="background-image : url('{!URLFOR($Resource.Resources, 'Resources/images/10kAdvisors_Logo_Mountain_Background.png')}')">
